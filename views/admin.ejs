    <!-- Add products form -->
    <section>
        <% if (session && session.addProducts) { %>
            <div id="overlay"></div>

            <div class="container" id="addProductsContainer">
                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <div class="card shadow add-product">

                            <div id="message" class="mt-3"></div>

                            <div class="card-header text-center">
                                <h4>Add New Product</h4>
                            </div>
                            <div class="card-body">
                                <div id="spinner" class="loading-spinner" style="display: none;"></div>

                                <form id="addProductForm" method="POST" action="/add_product"
                                    enctype="multipart/form-data">

                                    <!-- Product Name -->
                                    <div class="mb-3">
                                        <label for="productName" class="form-label">Product Name</label>
                                        <input type="text" class="form-control" id="productName" name="name"
                                            placeholder="Enter product name">
                                    </div>

                                    <!-- Product Description -->
                                    <div class="mb-3">
                                        <label for="productDescription" class="form-label">Product Description</label>
                                        <textarea class="form-control" id="productDescription" rows="1"
                                            name="description" placeholder="Enter product description"></textarea>
                                    </div>

                                    <!-- Product Images -->
                                    <div class="mb-3">
                                        <label for="productImage1" class="form-label">Product Image 1</label>
                                        <input type="file" class="form-control" id="productImage1" name="images">
                                    </div>
                                    <div class="mb-3">
                                        <label for="productImage2" class="form-label">Product Image 2</label>
                                        <input type="file" class="form-control" id="productImage2" name="images">
                                    </div>
                                    <div class="mb-3">
                                        <label for="productImage3" class="form-label">Product Image 3</label>
                                        <input type="file" class="form-control" id="productImage3" name="images">
                                    </div>

                                    <!-- Product Price -->
                                    <div class="mb-3">
                                        <label for="productPrice" class="form-label">Product Price (£)</label>
                                        <input type="number" step="0.01" class="form-control" id="productPrice"
                                            name="price" placeholder="Enter product price">
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary" id="submitBtn">Add
                                            Product</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </section>
